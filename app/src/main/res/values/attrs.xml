<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoEnableTextView">
        <attr name="timeout_in_sec" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PulseImageView">
        <attr name="animation_scale_start" format="float"/>
        <attr name="animation_scale_end" format="float"/>
        <attr name="animation_duration" format="integer"/>
        <attr name="animation_reverse" format="boolean"/>
        <attr name="animation_auto_pulse" format="boolean"/>
        <attr name="animation_time_interpolator" format="string"/>
    </declare-styleable>

    <declare-styleable name="ChatBubbleImageView">
        <attr name="bubble_gravity" format="integer"/>
        <attr name="bubble_color" format="color"/>
        <attr name="bubble_pressed_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
</resources>