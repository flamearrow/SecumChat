<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/disabled_button_background"/>
            <solid android:color="@color/disabled_button_background"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/light_purple"/>
            <gradient android:angle="-90" android:endColor="@color/mid_purple"
                      android:startColor="@color/dark_purple"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/light_purple"/>
            <solid android:color="@color/mid_purple"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/light_purple"/>
            <gradient android:angle="-90" android:endColor="@color/mid_purple"
                      android:startColor="@color/dark_purple"/>
        </shape>
    </item>

</selector>