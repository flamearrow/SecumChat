<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="toDial"
        android:text="toDial"
        android:textColor="@color/white"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="toReceive"
        android:text="toReceive"
        android:textColor="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/callee_name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="@string/mlgb"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/connect_button"
            android:onClick="connect"
            android:text="@string/connect"/>

        <TextView
            android:id="@+id/message_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pn_blue"
            android:textSize="25sp"
            android:text="@string/matched"/>

        <Button
            android:id="@+id/accept_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="acceptChat"
            android:text="@string/accept"
            android:textColor="@color/pn_blue"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/reject_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="rejectChat"
            android:text="@string/reject"
            android:textColor="@color/pn_blue"
            android:textSize="25sp"/>

    </LinearLayout>


</RelativeLayout>