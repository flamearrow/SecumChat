<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/lemon_yellow</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="OnboardingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OnboardingInputText">
        <item name="android:textSize">25dp</item>
        <!--<item name="android:inputType">textCapCharacters</item>-->
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="OnboardingButton">
        <item name="android:background">@drawable/onboarding_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/magenta</item>
    </style>
</resources>
