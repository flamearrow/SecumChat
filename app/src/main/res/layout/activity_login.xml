<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/hola"
        android:textColor="@color/pn_blue"
        android:textSize="35sp"/>


    <Button
        android:id="@+id/testButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/secum_button"
        android:layout_marginBottom="35dp"
        android:background="@color/pn_red"
        android:onClick="button1"
        android:text="log in as 11"
        android:textColor="#FFF"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/secum_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/secumLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:background="@color/pn_red"
        android:onClick="button2"
        android:text="log in as 22"
        android:textColor="#FFF"
        android:textSize="25sp"/>


    <TextView
        android:id="@+id/secumLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/logo_text"
        android:textColor="@color/pn_red"
        android:textSize="50dp">
    </TextView>

</RelativeLayout>
