<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/lemon_yellow"/>
            <gradient android:angle="-90" android:endColor="@color/mid_yellow" android:startColor="@color/dark_yellow"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/lemon_yellow"/>
            <solid android:color="@color/mid_yellow"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/lemon_yellow"/>
            <gradient android:angle="-90" android:endColor="@color/mid_yellow" android:startColor="@color/dark_yellow"/>
        </shape>
    </item>
</selector>