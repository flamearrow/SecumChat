<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/message_field"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:text="@string/matched"
            android:textColor="@color/lemon_yellow"
            android:textSize="25sp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:src="@drawable/male_filled_yellow"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/reject_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="40dp"
        android:onClick="rejectChat"
        android:src="@drawable/reject_red"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/accept_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:onClick="acceptChat"
        android:src="@drawable/accept_green"
        android:visibility="invisible"/>
</GridLayout>